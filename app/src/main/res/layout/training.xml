<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:text="@string/training"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_entrance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingHorizontal="120dp"
            android:paddingVertical="@dimen/vertical_padding"
            android:text="@string/entrance"
            android:textAllCaps="false"
            android:textSize="@dimen/nomination"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_training" />

        <Button
            android:id="@+id/button_registration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingVertical="@dimen/vertical_padding"
            android:text="@string/registration"
            android:textSize="@dimen/nomination"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/button_entrance"
            app:layout_constraintStart_toStartOf="@id/button_entrance"
            app:layout_constraintTop_toBottomOf="@id/button_entrance" />

        <Button
            android:id="@+id/button_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingVertical="@dimen/vertical_padding"
            android:text="@string/about"
            android:textAllCaps="false"
            android:textSize="@dimen/nomination"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/button_registration"
            app:layout_constraintStart_toStartOf="@id/button_registration" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>